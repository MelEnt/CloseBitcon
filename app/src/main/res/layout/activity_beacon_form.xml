<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.BeaconFormActivity">
    <LinearLayout
        android:id="@+id/beaconform_auth_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_auth_string"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="whnmoX2N2JSx"
            android:maxLength="12" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/beaconform_mac_address"
        android:layout_below="@id/beaconform_auth_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_mac_address"/>
        <EditText
            android:id="@+id/beaconform_mac_address_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/beaconform_admin_nbrs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/beaconform_mac_address"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_admin_key"/>
        <EditText
            android:inputType="number"
            android:maxLength="2"
            android:id="@+id/beaconform_admin_nbrs_adminkey_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_any_number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_mobile_key"/>
        <EditText
            android:inputType="number"
            android:maxLength="2"
            android:id="@+id/beaconform_admin_nbrs_mobilekey_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_any_number"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/beaconform_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/beaconform_admin_nbrs"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_beacon_type"/>
        <EditText
            android:inputType="number"
            android:maxLength="3"
            android:id="@+id/beaconform_type_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/beaconform_majorminor_nbrs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/beaconform_type">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_major"/>
        <EditText
            android:inputType="number"
            android:maxLength="2"
            android:id="@+id/beaconform_majorminor_nbrs_major_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_any_number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_minor"/>
        <EditText
            android:inputType="number"
            android:maxLength="2"
            android:id="@+id/beaconform_majorminor_nbrs_minor_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_any_number"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/beaconform_proxUUID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/beaconform_majorminor_nbrs">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_proximity_UUID"/>
        <EditText
            android:id="@+id/beaconform_proxUUID_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/beaconform_proxUUID">
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/send"
            android:onClick="submitForm"/>
    </LinearLayout>

</RelativeLayout>
